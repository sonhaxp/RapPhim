@{ 
    var rap = (List<BanVeXemPhim.Models.Entities.Rap>)Model;
} 
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Phòng Chiếu</h6>
        <div class="table-responsive">
            <i class="btn-action pc fa fa-plus bg-success mt-4" per="0" id="0"></i>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Mã phòng chiếu</th>
                        <th scope="col">Tên Phòng Chiếu</th>
                        <th scope="col">Số lượng hàng</th>
                        <th scope="col">Số lượng cột</th>
                        <th scope="col">Tên Rạp</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            <script>
                console.log('hello')
            </script>
            <button type="button" class="btn-openmodal" data-toggle="modal" data-target="#phongchieu-modal" hidden>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="phongchieu-modal" tabindex="-1" role="dialog" aria-labelledby="phongchieu-modal" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="input-group">
                                <b>Mã phòng chiếu</b>
                                <input type="text" id="ip-maphongchieu" readonly style="background-color:darkgray">
                            </div>
                            <div class="input-group">
                                <b>Tên phòng chiếu</b>
                                <input type="text" id="ip-tenphongchieu">
                            </div>
                            <div class="input-group">
                                <b>Số lượng hàng</b>
                                <input type="text" id="ip-row">
                            </div>
                            <div class="input-group">
                                <b>Số lượng cột</b>
                                <input type="text" id="ip-column">
                            </div>
                            <div class="input-group">
                                <b>Rạp</b>
                                <select id="select-rap">
                                    @foreach (var i in rap)
                                    {
                                        <option value="@i.MaRap">@i.TenRap</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary btn-phongchieu-save">Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>